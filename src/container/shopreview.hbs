<main>
    {{#with navigation}}
    <section>

        <div class="row card mb-5">
            <div class="col-12">
                <ul class="nav">
                    {{#each links}}
                    <li class="nav-item">
                        <a href="{{href}}" class="nav-link
                                {{#if @last}} disabled {{/if}}
                                ">
                            <h5>{{text}}</h5>
                        </a>

                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>


    </section>

    {{/with}}{{!-- {{/witn navigation}} --}}


    {{#with formBlock}}
    <section class="formBlock">
        {{#with actionBlock}}
        <div class="row">
            <div class="col-8">
                <h1>{{header}}</h1>
                <p>{{rating.title}}: {{rating.value}}</p>

                <ul class="nav nav-tabs mb-5">
                    {{#each tabs}}
                    <div class="col-4">
                        <li class="nav-link {{#if isActive}} active {{else}} disabled text-primary{{/if}}">
                            <h2 class="text-center">{{text}}</h2>
                        </li>
                    </div>
                    {{/each}}
                </ul>

                {{#with report}}
                <div class="card">
                    <div class="card-body">
                        <div class="title">
                            <p class="display-6">{{title}}</p>
                        </div>
                        <a href="{{button.link}}" class="btn btn-secondary">
                            <h5>{{button.text}}</h5>
                        </a>

                    </div>


                </div>
                {{/with}}{{!-- {{/with report}} --}}

            </div>
            {{/with}} {{!-- {{/with actionBlock}} --}}



            {{#with goodsInfo}}
            <div class="col-4">
                <div class="card">
                    <div class="m-3">
                        <img src="{{photo}}" alt="{{name}}" style="width: 400px" height="400" class="card-img-top">
                    </div>

                    <div class="card-body">
                        <h4 class="card-title">{{name}}</h4>

                    </div>

                    <div class="card p-3">
                        <p class="display-6">{{price}}</p>
                        {{#each buttons}}
                        <div class="mb-3">
                            <a href="{{link}}" class="btn
             {{#if isPrimary}} btn-primary {{else}} btn-secondary {{/if}}">
                                <h5>{{text}}</h5>
                            </a>

                        </div>

                        {{/each}}

                    </div>


                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-8">
                <hr>

            </div>
            <div class="col-4 mt-5">
                <div class="card">
                    <h5 class="text-center py-3">{{seller.title}}: <b>{{seller.value}}</b> </h5>

                </div>

            </div>
        </div>
        {{/with}} {{!-- {{#with goodsinfo}} --}}

    </section>
    {{#with feedbackBlock}}

    <section class="feedbackBlock">
        <div class="row">
            <div class="col-8">
                <h1 class="mb-5">{{title}}</h1>
                {{#each buttons}}

                <a href="{{link}}" class="btn 
                {{#if isWarning}} btn-warning {{/if}}
                {{#if isSuccess}} btn-success {{/if}}
                {{#if isDanger}} btn-danger {{/if}} mx-3">
                    <h5>{{text}}</h5>
                </a>

                {{/each}}
            </div>
        </div>

    </section>

    {{/with}} {{!-- {{#with feedbackBlock}} --}}

    {{/with}}{{!-- {{/with formblock}} --}}
    <hr>

    <section class="reviewList">

        {{#each reviewList}}
        {{> reviewItem}}
        {{/each}}{{!-- {{/each reviewList --}}
    </section>

    <section>
        {{#with service}}
           <div class="alert text-bg-success text-center">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <a href="link" class="btn btn-primary"><h5>{{text}}</h5> </a>
                   
                {{/each}}


        </div>
        {{/with}}
    </section>

</main>
<footer>
    <div class="row">
        {{#each footer}}
        <div class="col-2">
        {{#each this}}
        <div class="nav">
        <li class="nav-item">
        <a href="{{this.link}}" class="nav-link
        {{#if @last}} disabled {{/if}}"><h5>{{this.text}}</h5> </a>
        </li>
        </div>
        {{/each}}
        </div>
       
        {{/each}}
        

    </div>
</footer>