{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <section> 
        {{> title data = sectionSkills }}
        {{#with main}}
        <ul>
            {{#each skills}}
            <li>
                {{name}}
                {{#if point includeZero = true}} ({{point}}) {{/if}}
                {{#if isTop}} top {{/if}}
                {{#unless point includeZero=true}} не вивчаємо {{/unless}}
                {{#unless point}}
                {{#if point includeZero = true}} зараз вивчаємо {{/if}}
                {{/unless}}
            </li>
            {{/each}}
        </ul>
    </section>
    {{/with}}
    
    <section>
       {{> title data = sectionHobbies}} 
        {{#with main}}
        <ol>
            {{#each hobbies}}
            <li>
                {{name}}
                {{#if isMain}} - (favourite) {{/if}}
            </li>
            {{/each}}
        </ol>
        {{/with}}
    </section>

</div>

