<h1>{{name}}</h1>
<p>{{description}}</p>
<p><strong>Price:</strong> ${{price}}</p>
<p><strong>Category:</strong> {{category}}</p>

<h2>Features</h2>
<h3>Processor</h3>
{{#with features.processor}}
<p><strong>Brand:</strong> {{brand}}</p>
<p><strong>Model:</strong> {{model}}</p>
<p><strong>Speed:</strong> {{speed}}</p>
<p><strong>Cores:</strong> {{cores}}</p>
<p><strong>Cache:</strong> {{cache}}</p>
{{/with}}

<h3>Memory</h3>
{{#with features.memory}}
<p><strong>Type:</strong> {{type}}</p>
<p><strong>Size:</strong> {{size}}</p>
<p><strong>Speed:</strong> {{speed}}</p>
{{/with}}

<h3>Storage</h3>
{{#with features.storage}}
<p><strong>Type:</strong> {{type}}</p>
<p><strong>Size:</strong> {{size}}</p>
{{/with}}

<h3>Display</h3>
{{#with features.display}}
<p><strong>Size:</strong> {{size}}</p>
<p><strong>Resolution:</strong> {{resolution}}</p>
<p><strong>Technology:</strong> {{technology}}</p>
<p><strong>Color Space:</strong> {{color_space}}</p>
<p><strong>Brightness:</strong> {{brightness}}</p>
<p><strong>Refresh Rate:</strong> {{refresh_rate}}</p>
{{/with}}

<h3>Graphics</h3>
{{#with features.graphics}}
<p><strong>Brand:</strong> {{brand}}</p>
<p><strong>Model:</strong> {{model}}</p>
<p><strong>Memory:</strong> {{memory}}</p>
{{/with}}

<h3>Ports</h3>
<ul>
    {{#each features.ports}}
    <li>
        <p><strong>Type:</strong> {{type}}</p>
        <p><strong>Count:</strong> {{count}}</p>
        {{#if features}}
        <p><strong>Features:</strong></p>
        <ul>
            {{#each features}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        {{/if}}
    </li>
    {{/each}}
</ul>

<h3>Battery</h3>
{{#with features.battery}}
<p><strong>Type:</strong> {{type}}</p>
<p><strong>Capacity:</strong> {{capacity}}</p>
<p><strong>Life:</strong> {{life}}</p>
{{/with}}

<h3>Weight</h3>
<p>{{features.weight}}</p>

<h3>Dimensions</h3>
{{#with features.dimensions}}
<p><strong>Height:</strong> {{height}}</p>
<p><strong>Width:</strong> {{width}}</p>
<p><strong>Depth:</strong> {{depth}}</p>
{{/with}}

<h3>Operating System</h3>
<p>{{features.operating_system}}</p>
<h3>Accessories</h3>
<ul>
    {{#each features.accessories}}
    <li>
        <p><strong>Name:</strong> {{name}}</p>
        <p><strong>Price:</strong> ${{price}}</p>
    </li>
    {{/each}}
</ul>