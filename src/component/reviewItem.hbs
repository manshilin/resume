<div class="card mb-5">
            <div class="card-header">
                {{#with title}}
                <h3>{{userName}}</h3>
                <p>{{caption}}</p>
                <p>{{date}}</p>
                {{/with}}{{!-- {{#with title}} --}}
            </div>

            <div class="card-body">
                {{#with reviewBody}}
                <p>{{seller.title}}: {{seller.value}} </p>
                <p>{{rating.title}}: {{rating.value}}</p>
                {{#each text}}
                <p>{{this}}</p>
                {{/each}}

                <div> <b>{{advantages.title}}</b> </div>
                <p>{{advantages.text}}</p>

                <div> <b>{{disadvantages.title}}</b> </div>
                <p>{{disadvantages.text}}</p>
                <div>
                    {{#each images}}
                    <img src="{{this}}" alt="">

                    {{/each}}
                </div>

                <div class="row">
                    <div class="col-1">

                    </div>
                    <div class="col-11">
                        {{#each coments}}
                        <div class="card my-2">
                            <h3>{{this.userName}}</h3>
                            <p>{{this.date}}</p>
                            <p>{{this.text}}</p>
                        </div>
                        {{/each}}
                    </div>

                </div>

                {{/with}}{{!-- {{#with reviewBody}} --}}
            </div>
        </div>